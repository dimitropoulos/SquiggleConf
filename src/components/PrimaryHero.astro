---
import { links } from "~/data/index";

import AnchorButton from "./AnchorButton.astro";
import Hero from "./Hero.astro";
import HeroName from "./HeroName.astro";
import NoBreak from "./NoBreak.astro";
import IconOpenInNew from "~/assets/logos/icon-open-in-new.svg";
import { Image } from "astro:assets";
import ThemeToggle from "./ThemeToggle.astro";
---

<Hero>
	<HeroName align="center" color="inverted" level="h1" />
	<AnchorButton href={links.tickets} target="_blank" rel="noreferrer">
		$450 Tickets Available Now
	</AnchorButton>

	<div class="sub-mentions">
		<a
			class="sub-mention"
			href={links.scholarship}
			target="_blank"
			rel="noreferrer"
		>
			<NoBreak>Apply for</NoBreak>
			<NoBreak>DEI Scholarship </NoBreak>
			<Image alt="open in new window" src={IconOpenInNew} />
		</a>
		<a
			class="sub-mention"
			href={links.volunteer}
			target="_blank"
			rel="noreferrer"
		>
			<NoBreak>Apply to</NoBreak>
			<NoBreak>Volunteer</NoBreak>
			<Image alt="open in new window" src={IconOpenInNew} />
		</a>
		<a
			class="sub-mention"
			href={links.tickets}
			target="_blank"
			rel="noreferrer"
		>
			<NoBreak>Bulk Tickets</NoBreak>
			<NoBreak>Now Available</NoBreak>
			<Image alt="open in new window" src={IconOpenInNew} />
		</a>
	</div>

	<ThemeToggle />
</Hero>

<style>
	.sub-mentions {
		align-items: center;
		display: flex;
		gap: clamp(1rem, 5vw, 2rem);
	}

	.sub-mention {
		color: var(--colorLightBlue);
		font-size: var(--fontSizeBodySmall);
		font-family: var(--fontFamilyHeading);
		text-underline-offset: 0.2em;
		transition: var(--transitionMedium) color;
	}

	.sub-mention:hover {
		color: var(--colorWhite);
	}

	@media (min-width: 819px) {
		.sub-mentions {
			padding-bottom: 2rem;
		}

		.sub-mention {
			font-size: var(--fontSizeBody);
		}
	}
</style>
