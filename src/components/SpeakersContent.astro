---
import Heading from "./Heading.astro";
import SquiggleFlanked from "./SquiggleFlanked.astro";

import FullSection from "./FullSection.astro";
import Talk, { TalkInfo } from "./Talk.astro";
import SpeakersList from "./SpeakersList.astro";
import SpeakersArea from "./SpeakersArea.astro";
import talks from "./talks.json";
---

<FullSection>
	{
		Astro.props.heading && (
			<SquiggleFlanked class="squiggle-flanked" width="lean">
				<Heading class="heading" id="speakers" level="h2" link>
					Speakers
				</Heading>
			</SquiggleFlanked>
		)
	}

	<SpeakersArea>
		<SpeakersList>
			{talks.map((talk) => <Talk talk={talk as TalkInfo} />)}
		</SpeakersList>

		<slot />
	</SpeakersArea>
</FullSection>

<style>
	.squiggle-flanked {
		margin-bottom: 3rem;
	}

	.heading {
		font-size: var(--fontSizeH2);
	}
</style>
